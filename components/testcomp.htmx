<div style="border: 1px solid black;">
    <button onclick="$comp.toggleShow()">
        $if($comp.shouldShowContent()){
        Hide
        }
        $if(!$comp.shouldShowContent()){
        Show
        }
    </button>
    $if($comp.shouldShowContent()){
    <span style="color: red">{mcontent}</span>
    }
    !boolVal: ${$comp.boolval}
    strVal + " text": ${$comp.strval + " text"}
    numVal + 10: ${$comp.numval + 10}
    <br>
    show: ${$comp.shouldShowContent()}
</div>